
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>App</title>
    </head>
    <body>
        <h3 style="text-align: center;">PDF</h3>
        <div style="margin: 10%;"></div>
        <div style="text-align: center">
            <table border="2">
                <thead>
                    <th>Sr No</th>
                    <th>Date</th>
                    <th>Item</th>
                    <th>Cost</th>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.cost}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <td></td>
                    <td></td>
                    <td><b>Total</b></td>
                    <td>{{total}}</td>
                </tfoot>
            </table>
        </div>
    </body>
</html>